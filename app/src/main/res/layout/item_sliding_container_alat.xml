<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_kategori_alat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Paket"
        android:textColor="@color/hitam" />

    <TextView
        android:id="@+id/tv_kosong_item_sliding_alat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kategori_alat"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="3dp"
        android:text="- Belum diproses -"
        android:textColor="@color/grey2"
        android:textStyle="italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_sliding_alat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_kategori_alat"
        android:layout_marginTop="3dp"
        tools:itemCount="3"
        tools:listitem="@layout/item_bahan_alat_sliding_pesanan" />


</RelativeLayout>