<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_intro"
        android:background="@drawable/ic_android_black_24dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:id="@+id/title_intro"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Dapur"
        android:layout_width="wrap_content"
        android:layout_below="@id/img_intro"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/deskripsi_intro"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/grey"
        android:layout_marginHorizontal="25dp"
        android:layout_below="@id/title_intro"
        android:text="Lorem Ipsum Dapur adala bla bla bl ndsjk khjdkshnk hdkjnsk vdhs jkdsn bdksj ndksj bdsj nhdkjs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>