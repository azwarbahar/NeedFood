<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_image_stok"
        app:cardElevation="5dp"
        android:layout_alignLeft="@id/rl_contener_item_stok"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item_stok"
                android:scaleType="centerCrop"
                android:src="@drawable/image_daging"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_contener_item_stok"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/stroke_orange">

        <TextView
            android:id="@+id/tv_title_item_stok"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginLeft="12dp"
            android:text="Daging Salmon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_kuantitas_item_stok"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignLeft="@id/tv_kuantitas_item_stok"
            android:layout_below="@+id/tv_kuantitas_item_stok"
            android:text="Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</RelativeLayout>