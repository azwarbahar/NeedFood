<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_icon_lokasi_driver"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_below="@id/img1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_icon_lokasi_tujuan"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_below="@id/img2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_icon_lokasi_jemput"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <TextView
        android:text="Lokasi Driver"
        android:layout_alignBottom="@id/img1"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/img1"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Lokasi Pengantaran"
        android:layout_alignBottom="@id/img2"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/img2"
        android:layout_toRightOf="@id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Lokasi Penjemputan"
        android:layout_alignBottom="@id/img3"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@id/img3"
        android:layout_toRightOf="@id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>