<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_grey_corner"
        android:paddingHorizontal="8dp"
        android:paddingVertical="3dp"
        android:text="Yakiniku"
        android:layout_marginBottom="8dp"
        android:textColor="@color/putih" />



    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_nama"
        android:layout_alignBottom="@id/tv_nama"
        android:gravity="center"
        android:text="10000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/hitam" />


    <TextView
        android:id="@+id/tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_nama"
        android:layout_alignBottom="@id/tv_nama"
        android:layout_toLeftOf="@id/tv_harga"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="x"
        android:textColor="@color/grey2" />

    <TextView
        android:id="@+id/tv_jumlah"
        android:layout_marginRight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_nama"
        android:layout_toLeftOf="@id/tv_x"
        android:layout_alignBottom="@id/tv_nama"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/hitam" />

    <View
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:background="@color/grey2" />

</RelativeLayout>